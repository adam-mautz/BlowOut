@model BlowOut.Models.Rental

@{
    ViewBag.Title = "Rental";
}


<div class="w3-container">
    <h1 style="color: black; font-size: 100px">@ViewBag.Instrument</h1>
    <div style="text-align:center">
        <input type="radio" name="tab" value="igotnone" onclick="show1();" />
        New
        <input type="radio" name="tab" value="igottwo" onclick="show2();" />
        Used

        <h2 id="new"></h2>

        <!-- Trigger/Open The Modal -->
        <br />
        <button class="btn-group-sm" id="myBtn">Rental Details</button><br /><br />



        <p><a class="btn btn-default" href='@Url.Action("Create", "Clients", new { Id = ViewBag.Id, Description = ViewBag.Instrument, Type = "New", Price = ViewBag.New  })'>Rent New &raquo;</a></p>
        <p><a class="btn btn-default" href='@Url.Action("Create", "Clients",  new { Id = ViewBag.Id, Description = ViewBag.Instrument, Type = "Used", Price = ViewBag.Used })'>Rent Used &raquo;</a></p>

    </div>
    <hr>
</div>


<div class="w3-container">  <img src="~/Content/images/@ViewBag.Image" style="  display: block;margin-left: auto; margin-right: auto; width: 50%;"/> </div>









<!-- The Modal -->
<div id="myModal" class="modal">

    <!-- Modal content -->
    <div class="modal-content">
        <span class="close">&times;</span>
        <p>Once 18 months of payments have been achieved, the client owns the instrument. Returning the instrument prematurely causes a $200 re-stocking fee. After 3 months of use, the customer forfeits any equity in the instrument.</p>
    </div>

    <script>
        // Get the modal
        var modal = document.getElementById("myModal");

        // Get the button that opens the modal
        var btn = document.getElementById("myBtn");

        // Get the <span> element that closes the modal
        var span = document.getElementsByClassName("close")[0];

        // When the user clicks on the button, open the modal
        btn.onclick = function () {
            modal.style.display = "block";
        }

        // When the user clicks on <span> (x), close the modal
        span.onclick = function () {
            modal.style.display = "none";
        }

        // When the user clicks anywhere outside of the modal, close it
        window.onclick = function (event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }

        function show1() {
            document.getElementById('new').innerHTML = '$@ViewBag.New a month';
        }
        function show2() {
            document.getElementById('new').innerHTML = '$@ViewBag.Used a month';
        }

    </script>

</div>
