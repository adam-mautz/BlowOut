@model BlowOut.Models.Rental

@{
    ViewBag.Title = "Rental";
}



<div class="w3-container" style="background-color:#737170; color: white">
    <h1 style="text-align:center">@ViewBag.Instrument</h1>

</div>

<table style="width:100%; font-size: larger; text-align:center">
    <tr>
        <th>Used Price</th>
        <th>New Price</th>
    </tr>
    <tr>
        <td>$ @ViewBag.Used per month</td>
        <td>$ @ViewBag.New per month</td>
    </tr>
</table>

<!-- Trigger/Open The Modal -->
<br />
<button id="myBtn">Rental Details</button><br />

<!-- The Modal -->
<div id="myModal" class="modal">

    <!-- Modal content -->
    <div class="modal-content">
        <span class="close">&times;</span>
        <p>Once 18 months of payments have been achieved, the client owns the instrument. Returning the instrument prematurely causes a $200 re-stocking fee. After 3 months of use, the customer forfeits any equity in the instrument.</p>
    </div>

    <script>
        // Get the modal
        var modal = document.getElementById("myModal");

        // Get the button that opens the modal
        var btn = document.getElementById("myBtn");

        // Get the <span> element that closes the modal
        var span = document.getElementsByClassName("close")[0];

        // When the user clicks on the button, open the modal
        btn.onclick = function () {
            modal.style.display = "block";
        }

        // When the user clicks on <span> (x), close the modal
        span.onclick = function () {
            modal.style.display = "none";
        }

        // When the user clicks anywhere outside of the modal, close it
        window.onclick = function (event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }
    </script>

</div>


<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img src="~/Content/images/download.jpg" alt="Woodwind"/>
        </div>

        <div class="item">
            <img src="~/Content/images/Brass-Instruments.jpg" />
        </div>

        <div class="item">

            <img src="~/Content/images/percussion.png" alt="Percussion"/>
        </div>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>


